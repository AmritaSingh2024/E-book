<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color for the badge -->
    <solid android:color="#FF0000"/> <!-- Replace with your desired color -->

    <!-- Rounded corners for the badge -->
    <corners android:radius="10dp"/> <!-- Adjust radius as needed -->

    <!-- Optional: Stroke (border) around the badge -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFF"/> <!-- Replace with border color and width as needed -->

    <!-- Padding for the badge content -->
    <padding
        android:left="4dp"
        android:right="4dp"
        android:top="1dp"
        android:bottom="1dp"/>

</shape>

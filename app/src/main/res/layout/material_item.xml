<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardBackgroundColor="@color/cardcolor"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/booklistcoverImageView"
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:layout_alignParentEnd="true"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/cover1" />

        <TextView
            android:id="@+id/listbookname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/booklistcoverImageView"
            android:layout_toLeftOf="@id/booklistcoverImageView"
            android:text="The Last_ Four_Things"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/listauthorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listbookname"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/booklistcoverImageView"
            android:layout_toLeftOf="@id/booklistcoverImageView"
            android:layout_marginTop="5dp"
            android:text="Author_Name"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/listpublishDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listauthorname"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/booklistcoverImageView"
            android:layout_toLeftOf="@id/booklistcoverImageView"
            android:layout_marginTop="5dp"
            android:text="Publish Date: 01/01/2020"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

       <!-- <TextView
            android:id="@+id/listprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listpublishDateTextView"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:layout_toStartOf="@id/booklistcoverImageView"
            android:layout_toLeftOf="@id/booklistcoverImageView"
            android:layout_marginTop="5dp"
            android:text="2000"
            android:textSize="14sp"
            android:textColor="@android:color/black" />-->

        <Button
            android:id="@+id/listViewNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listpublishDateTextView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/rbbold"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:text="View_Book"
            android:textSize="10sp"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
